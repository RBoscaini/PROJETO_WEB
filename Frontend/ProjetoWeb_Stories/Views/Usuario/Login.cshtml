@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">

<title>Rede Social Uniftec</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="https://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">
<style type="text/css">

        body {
            margin-top: 20px;
            background-color: #FFE7D3
        }

        .modal-footer {   border-top: 0px; }

 
</style>
</head>
<body>

    <div class="container d-flex justify-content-center bg-primary">
                <h1 class="text-center">Rede Social</h1>
            
                <div class="modal-body">
                    <form class="form col-md-12 center-block" asp-controller="Usuario" asp-action="Login" method="post">

                        @Html.ValidationSummary()
                        <div class="form-group">
                            <h3 class="h5 mb-2 text-center">Login:</h3>
                    <input type="email" class="form-control input-lg" placeholder="Email" id="login.email" name="login.email">
                        </div>
                        <div class="form-group">
                            <h3 class="h5 mb-2 text-center">Senha:</h3>
                    <input type="password" class="form-control input-lg" placeholder="Senha" id="login.senha" name="login.senha">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-lg btn-block">Entrar</button>
                            <span class="pull-right"><a href="#">Criar conta</a></span><span><a href="#">Esqueceu sua senha?</a></span>
                        </div>
                     </form>
                </div>
               
    </div>
        <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
        <script src="https://netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
<script type="text/javascript">
	
</script>
</body>
</html>